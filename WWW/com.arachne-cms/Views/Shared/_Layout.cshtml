@model WWW.ViewModels.PageModel
<!DOCTYPE html>
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie ie9" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"> <!--<![endif]-->
<head>
    @Html.Partial("HeaderMeta", Model.Meta)

    <link rel="stylesheet" href="/css/style.css"> 
    <link rel="stylesheet" href="/css/skins/colors/red.css" />
    <link rel="stylesheet" href="/css/layout/wide.css" />
    <link rel="stylesheet" href="/css/switcher/style.css">
    <link rel="stylesheet" href="/UI/css/layout.min.css" />
    <link rel="shortcut icon" href="/UI/favicon.ico" />

    <!--[if lt IE 9]>
        <script src="js/html5.js"></script>
    <![endif]-->
</head>
<body>
    <div id="wrap" class="boxed">
        <header>
            <div class="top-bar">
                <div class="container clearfix">
                    <div class="slidedown">
                        <div class="eight columns">
                            <div class="phone-mail">
                                @*TODO:<a><i class="icon-phone"></i> Phone : +22 665 450 210</a>*@
                                <a href="mailto:contact@arachne-cms.com"><i class="icon-envelope-alt"></i> Mail : contact@arachne-cms.com</a>
                            </div>
                        </div>
                        
                        <div class="eight columns">
                            @Html.Partial("SocialIcons")
                        </div>
                    </div>
                </div>
            </div>
     
            <div class="main-header">
                <div class="container clearfix">
                    <a href="#" class="down-button"><i class="icon-angle-down"></i></a> @*TODO:this appear on small devices*@
                    <div style="float: left"> @*TODO:Style to CSS*@
                        <div class="logo">
                            <a href="/">
                                <img src="/UI/img/logo.png" alt="Arachne CMS" />
                                Arachne CMS<sup>0.0.1</sup>@*TODO:Get version automatically*@
                                <small>Лаборатория контент-менеджмента</small>
                            </a>
                        </div>
                    </div>
         
                    <div style="float: right"> @*TODO:Style to CSS*@
                        <nav id="menu" class="navigation" role="navigation">
                            <a href="#">Show navigation</a> @*TODO:this appear on small devices*@
                            <ul id="nav">
                                <li class="active"><a href="/">Home</a></li>
                                <li><a class="todo" href="#/ru/about">About</a></li>
                                <li><a class="todo" href="#/ru/features">Features</a></li>
                                <li><a class="todo" href="#/ru/blog">Blog</a></li>
                                <li><a class="todo" href="#/ru/contact">Contact</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </header>

        @RenderBody()

        <footer>
            <div class="footer-top">
                <div class="container clearfix">
                    <div class="one-third column widget">
                        <h3 class="title">Latest Tweets</h3>
                        <div id="tweets-footer" class='tweet query footer'></div>
                    </div>
        
                    <div class="one-third column widget">
                        <h3 class="title">Flickr Stream</h3>
                        <ul id="footer" class="thumbs"></ul>
                    </div>
        
                    <div class="one-third column widget">
                        <div class="subscribe"> 
                        <h3 class="title">Subscribe</h3>
                        <p>Subscribe to our email newsletter to receive our news and updates.</p>
                        <form id="form-subscribe" action="#">
                            <input type="text" class="mail" placeholder="yourmail@domain.com" />
                            <input type="submit" value="Subscribe" class="submit" />
                        </form>
                        </div>
                    </div>
                </div>
            </div>
     
            <div class="footer-down">
                <div class="container clearfix">
                    <div class="eight columns">
                        <span class="copyright">
                            © 2013-@(DateTime.Today.Year) <a class="todo" href="#/ru/todo">Stanislav S. Yarmonov</a>. All Rights Reserved.
                        </span>
                    </div>
        
                    <div class="eight columns">
                        @Html.Partial("SocialIcons")
                    </div>
                </div>
            </div>
     
        </footer>
    </div>

    @Html.Partial("Counters", Model)

    <script src="/js/jquery-1.9.1.min.js"></script>
    <script src="/js/jquery.easing.1.3.min.js"></script>
    <script src="/js/jquery-ui/jquery.ui.core.js"></script>
    <script src="/js/jquery-ui/jquery.ui.widget.js"></script>
    <script src="/js/jquery-ui/jquery.ui.accordion.js"></script>
    <script src="/js/jquery-cookie.js"></script>
    <script src="/js/ddsmoothmenu.js"></script>
    <script src="/js/jquery.flexslider.js"></script>
    <script src="/js/colortip.js"></script>
    <script src="/js/tytabs.js"></script>
    <script src="/js/jquery.ui.totop.js"></script>
    <script src="/js/carousel.js"></script>
    <script src="/js/jquery.isotope.min.js"></script>
    @*TODO:<script src="/js/twitter/jquery.tweet.js"></script>*@
    @*TODO:<script src="/js/jflickrfeed.min.js"></script>*@
    @*TODO:<script src="/js/social-options.js"></script>*@
    <script src="/js/doubletaptogo.js"></script>
    <script src="/js/fancybox/jquery.fancybox.js"></script>
    <script src="/js/jquery.sticky.js"></script>
    <script src="/js/custom.js"></script>
</body>
</html>
