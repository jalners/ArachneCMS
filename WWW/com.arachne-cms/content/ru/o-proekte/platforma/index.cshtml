    Model.Meta.OpenGraph.Add("title", Model.Meta.Title);
    Model.Meta.OpenGraph.Add("image", this.Request.Url + "/instrumenty.jpg");
    Model.Meta.OpenGraph.Add("description", "Какую платформу и инструменты для разработки не выбери, всегда найдутся те, кто тебя поддержит и те, кто предаст анафеме. У нас нет никаких предубеждений относительно тех или иных средств достижения цели, а также сакральных знаний, какое из них лучше или хуже.");
